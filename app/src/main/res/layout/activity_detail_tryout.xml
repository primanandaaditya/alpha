<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:padding="30dp"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.detail_tryout.DetailTryoutActivity">

    <androidx.cardview.widget.CardView
        app:cardCornerRadius="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <ScrollView

            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout

                android:padding="20dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <SearchView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </SearchView>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="20dp">

                </View>


               <androidx.cardview.widget.CardView

                   app:cardCornerRadius="20dp"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent">

                   <LinearLayout
                       android:padding="20dp"
                       android:background="@color/colorPrimary"
                       android:orientation="vertical"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content">

                       <TextView
                           android:textColor="@color/putih"
                           android:textStyle="bold"
                           android:textSize="20dp"
                           android:text="Tryout SAINTEK 1"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content">

                       </TextView>

                       <View
                           android:layout_width="match_parent"
                           android:layout_height="10dp">

                       </View>

                       <TextView
                           android:textColor="@color/putih"
                           android:layout_weight="1"
                           android:text="Nilai : 500"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content">

                       </TextView>

                       <TextView
                           android:textColor="@color/putih"
                           android:layout_weight="1"
                           android:text="Ranking: 2 dari 100"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content">

                       </TextView>

                       <View
                           android:layout_width="match_parent"
                           android:layout_height="5dp">

                       </View>

                       <Button

                           android:background="@drawable/rounded_white_button"
                           android:layout_gravity="end"
                           android:text="@string/buka"
                           android:id="@+id/btn_buka"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content">

                       </Button>

                   </LinearLayout>

               </androidx.cardview.widget.CardView>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="20dp">

                </View>


                <androidx.cardview.widget.CardView

                    app:cardCornerRadius="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:padding="20dp"
                        android:background="@color/colorPrimary"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:textColor="@color/putih"
                            android:textStyle="bold"
                            android:textSize="20dp"
                            android:text="Tryout SAINTEK 2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        </TextView>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="10dp">

                        </View>

                        <TextView
                            android:textColor="@color/putih"
                            android:layout_weight="1"
                            android:text="Nilai : 500"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        </TextView>

                        <TextView
                            android:textColor="@color/putih"
                            android:layout_weight="1"
                            android:text="Ranking: 2 dari 100"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        </TextView>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="5dp">

                        </View>

                        <Button

                            android:background="@drawable/rounded_white_button"
                            android:layout_gravity="end"
                            android:text="@string/buka"

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                        </Button>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>



            </LinearLayout>
        </ScrollView>

    </androidx.cardview.widget.CardView>

</LinearLayout>