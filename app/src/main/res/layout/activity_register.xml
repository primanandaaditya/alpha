<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="@color/colorPrimary"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.RegisterActivity">


    <LinearLayout
        android:gravity="center_horizontal|center_vertical"

        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:layout_margin="40dp"
            android:background="@color/putih"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            card_view:cardCornerRadius="20dp">

            <RelativeLayout
                android:padding="20dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <TextView
                    android:layout_alignParentTop="true"
                    android:textSize="30dp"
                    android:gravity="center_horizontal"
                    android:id="@+id/tv_login"
                    android:text="@string/registrasi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <ScrollView
                    android:layout_above="@id/btn_login"
                    android:layout_below="@id/tv_login"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_marginTop="40dp"
                            android:text="@string/nama_lengkap"
                            android:id="@+id/tv_nama"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        </TextView>

                        <EditText
                            android:padding="8dp"
                            android:background="@drawable/border_edittext"
                            android:inputType="text"
                            android:id="@+id/et_nama"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        </EditText>

                        <TextView
                            android:layout_marginTop="5dp"
                            android:text="@string/email"
                            android:id="@+id/tv_email"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        </TextView>

                        <EditText
                            android:padding="8dp"
                            android:background="@drawable/border_edittext"
                            android:inputType="textEmailAddress"
                            android:id="@+id/et_email"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        </EditText>





                        <TextView
                            android:layout_marginTop="5dp"
                            android:text="@string/nomor_hp"
                            android:id="@+id/tv_hp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        </TextView>

                        <EditText
                            android:padding="8dp"
                            android:background="@drawable/border_edittext"
                            android:inputType="text"
                            android:id="@+id/et_hp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        </EditText>





                        <TextView
                            android:layout_marginTop="5dp"
                            android:text="@string/kampus_impian"
                            android:id="@+id/tv_kampus_impian"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        </TextView>

                        <EditText
                            android:padding="8dp"
                            android:background="@drawable/border_edittext"
                            android:inputType="text"
                            android:id="@+id/et_kampus_impian"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        </EditText>




                        <TextView
                            android:layout_marginTop="5dp"
                            android:text="@string/prodi_impian"
                            android:id="@+id/tv_prodi_impian"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        </TextView>

                        <EditText
                            android:padding="8dp"
                            android:background="@drawable/border_edittext"
                            android:inputType="text"
                            android:id="@+id/et_prodi_impian"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        </EditText>






                        <TextView
                            android:layout_marginTop="5dp"
                            android:text="@string/sekolah"
                            android:id="@+id/tv_sekolah"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        </TextView>

                        <EditText
                            android:padding="8dp"
                            android:background="@drawable/border_edittext"
                            android:inputType="text"
                            android:id="@+id/et_sekolah"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        </EditText>






                        <TextView
                            android:layout_marginTop="5dp"
                            android:text="@string/kelas"
                            android:id="@+id/tv_kelas"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        </TextView>

                        <EditText
                            android:padding="8dp"
                            android:background="@drawable/border_edittext"
                            android:inputType="text"
                            android:id="@+id/et_kelas"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        </EditText>


                        <TextView
                            android:layout_marginTop="5dp"
                            android:text="@string/password"
                            android:id="@+id/tv_password"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        </TextView>

                        <RelativeLayout

                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content">

                            <EditText
                                android:padding="8dp"
                                android:background="@drawable/border_edittext"
                                android:id="@+id/et_password"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:inputType="textPassword"/>

                            <ImageView
                                android:id="@+id/show_pass_btn"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:alpha=".5"
                                android:padding="5dp"
                                android:src="@drawable/ic_eye" />
                        </RelativeLayout>




                        <TextView
                            android:layout_marginTop="5dp"
                            android:text="@string/konfirmasi_password"
                            android:id="@+id/tv_konfirmasi_password"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        </TextView>

                        <RelativeLayout
                            android:layout_marginBottom="10dp"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content">

                            <EditText
                                android:padding="8dp"
                                android:background="@drawable/border_edittext"
                                android:id="@+id/et_konfirmasi_password"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:inputType="textPassword"/>

                            <ImageView
                                android:id="@+id/show_konf_pass_btn"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:alpha=".5"
                                android:padding="5dp"
                                android:src="@drawable/ic_eye" />
                        </RelativeLayout>
                    </LinearLayout>

                </ScrollView>



                <Button
                    android:id="@+id/btn_login"
                    android:text="@string/registrasi"
                    android:textColor="@color/putih"
                    android:background="@drawable/rounded_blue_button"
                    android:layout_alignParentBottom="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </Button>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>


    </LinearLayout>


</LinearLayout>