<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/putih"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.to.screen.TryoutScreenActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:padding="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">



                <LinearLayout
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        app:srcCompat="@drawable/ic_jam"
                        android:layout_width="30dp"
                        android:layout_height="30dp">

                    </ImageView>
                    <TextView

                        android:id="@+id/tv_waktu"
                        android:gravity="center_vertical"
                        android:text="01:00:00"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    </TextView>


                </LinearLayout>

                <LinearLayout
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:textColor="@color/colorPrimary"
                        android:gravity="center_vertical|center_horizontal"
                        android:textSize="16dp"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:text="SAINTEK"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    </TextView>


                </LinearLayout>

                <LinearLayout
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Button
                        android:textColor="@color/putih"
                        android:background="@drawable/rounded_blue_button"
                        android:id="@+id/btn_akhiri"
                        android:text="@string/akhiri_try_out"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    </Button>

                </LinearLayout>

            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:background="@color/colorPrimary"
                android:id="@+id/rv"
                android:layout_width="match_parent"
                android:layout_height="40dp">
            </androidx.recyclerview.widget.RecyclerView>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"></View>

            <LinearLayout
                android:padding="20dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:text="@string/pertanyaan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </TextView>

                <TextView
                    android:id="@+id/tv_soal"
                    android:text="@string/bank_soal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </TextView>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"></View>

                <TextView
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:text="@string/jawaban"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </TextView>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"></View>

                <TextView
                    android:text="@string/jawaban"
                    android:id="@+id/tv_opsiA"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </TextView>

                <TextView
                    android:text="@string/jawaban"
                    android:id="@+id/tv_opsiB"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </TextView>
                <TextView
                    android:text="@string/jawaban"
                    android:id="@+id/tv_opsiC"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </TextView>
                <TextView
                    android:text="@string/jawaban"
                    android:id="@+id/tv_opsiD"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </TextView>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"></View>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Button
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:textColor="@color/putih"
                        android:id="@+id/btnA"
                        android:text="A"
                        android:background="@drawable/rounded_opsi_button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    </Button>

                    <Button
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:textColor="@color/putih"
                        android:id="@+id/btnB"
                        android:text="B"
                        android:background="@drawable/rounded_opsi_button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    </Button>

                    <Button
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:textColor="@color/putih"
                        android:id="@+id/btnC"
                        android:text="C"
                        android:background="@drawable/rounded_opsi_button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    </Button>

                    <Button
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:textColor="@color/putih"
                        android:id="@+id/btnD"
                        android:text="D"
                        android:background="@drawable/rounded_opsi_button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    </Button>

                </LinearLayout>
            </LinearLayout>





        </LinearLayout>




    </ScrollView>


</LinearLayout>