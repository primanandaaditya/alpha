<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".fragments.to.ToFragment">

    <ScrollView

        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:paddingBottom="100dp"
            android:layout_margin="20dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                app:cardCornerRadius="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:padding="10dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout

                        android:layout_weight="4"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:scaleType="fitCenter"
                            app:srcCompat="@drawable/ic_akun"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                        </ImageView>

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"

                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_marginBottom="5dp"
                            android:textStyle="bold"
                            android:id="@+id/tv_nama"
                            android:text="Elizabeth Tasya A."
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        </TextView>

                        <TextView

                            android:textSize="12dp"
                            android:text="Tryout UTBK Saintek 84"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        </TextView>

                        <TextView

                            android:textSize="12dp"
                            android:text="Score : 600"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        </TextView>

                        <TextView

                            android:textSize="12dp"
                            android:text="Ranking : 7"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        </TextView>

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp">
            </View>


            <androidx.cardview.widget.CardView

                app:cardCornerRadius="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">



                    <LinearLayout

                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:paddingTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:orientation="vertical"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/iv_bank_soal"
                                app:srcCompat="@drawable/ic_bank_soal"
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="70dp">

                            </ImageView>

                            <TextView
                                android:textAlignment="center"
                                android:text="@string/bank_soal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                            </TextView>



                        </LinearLayout>

                        <LinearLayout
                            android:paddingTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:orientation="vertical"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/iv_tryout"
                                app:srcCompat="@drawable/ic_tryout"
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="70dp">

                            </ImageView>

                            <TextView
                                android:textAlignment="center"
                                android:text="@string/tryout"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                            </TextView>



                        </LinearLayout>





                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp">
            </View>


            <androidx.cardview.widget.CardView
                app:cardCornerRadius="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:padding="10dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_marginBottom="20dp"
                        android:textStyle="bold"
                        android:text="Try Out UTBK #1 - Saintek"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    </TextView>

                    <TextView
                        android:text="Pengerjaan :"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    </TextView>

                    <TextView
                        android:textColor="@color/gray"
                        android:text="1 Desember 2020 s/d 2 Desember 2020"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    </TextView>

                    <Button
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/putih"
                        android:background="@drawable/rounded_blue_button"
                        android:text="@string/buka"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    </Button>

                </LinearLayout>

            </androidx.cardview.widget.CardView>


            <View
                android:layout_width="match_parent"
                android:layout_height="10dp">
            </View>


            <androidx.cardview.widget.CardView
                app:cardCornerRadius="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:padding="10dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_marginBottom="20dp"
                        android:textStyle="bold"
                        android:text="Try Out UTBK #2 - IPA"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    </TextView>

                    <TextView
                        android:text="Pengerjaan :"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    </TextView>

                    <TextView
                        android:textColor="@color/gray"
                        android:text="3 Desember 2020 s/d 4 Desember 2020"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    </TextView>

                    <Button
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/putih"
                        android:background="@drawable/rounded_blue_button"
                        android:text="@string/buka"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    </Button>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>


</FrameLayout>