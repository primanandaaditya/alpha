<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
   android:padding="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_jumlah_benar"
        android:text="Jumlah benar : "
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </TextView>

    <View
        android:layout_width="match_parent"
        android:layout_height="20dp"></View>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ProgressBar
            android:progressTint="@color/colorAccent"
            android:layout_weight="1"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:id="@+id/pb_nilai_anda"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:max="1000"
            android:progress="560">

        </ProgressBar>


        <TextView
            android:textStyle="bold"
            android:layout_weight="3"
            android:id="@+id/tv_nilai_anda"
            android:textColor="@color/colorAccent"
            android:text="560"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </TextView>

    </LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ProgressBar
            android:progressTint="@color/orange"
            android:layout_weight="1"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:id="@+id/pb_nilai_purata"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:max="1000"
            android:progress="780">

        </ProgressBar>


        <TextView
            android:textStyle="bold"
            android:layout_weight="3"
            android:id="@+id/tv_nilai_purata"
            android:textColor="@color/orange"
            android:text="780"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </TextView>

    </LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:layout_gravity="center_vertical"
            android:background="@color/colorAccent"
            android:layout_width="15dp"
            android:layout_height="15dp">

        </View>

        <View
            android:layout_width="10dp"
            android:layout_height="match_parent">

        </View>

        <TextView
            android:text="Nilai Anda"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>

        <View
            android:layout_width="40dp"
            android:layout_height="match_parent">
        </View>

        <View
            android:layout_gravity="center_vertical"
            android:background="@color/orange"
            android:layout_width="15dp"
            android:layout_height="15dp">

        </View>

        <View
            android:layout_width="10dp"
            android:layout_height="match_parent">

        </View>

        <TextView
            android:text="Nilai rata-rata"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </TextView>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="40dp"></View>


</LinearLayout>